# Development Environment Variables for Vedic Astrology Calculator

# Application Environment
ENVIRONMENT=development
PYTHONPATH=/app

# Server Configuration
HOST=0.0.0.0
PORT=5000
WORKERS=1
RELOAD=true

# Database Configuration
DATABASE_URL=sqlite:///data/astrology_db.sqlite3

# Session Configuration
SESSION_TIMEOUT=86400  # 24 hours for development

# CORS Configuration (allow localhost)
CORS_ORIGINS=http://localhost:3000,http://localhost:5000,http://127.0.0.1:5000
AUTHORIZED_DOMAINS=localhost,127.0.0.1

# Security Configuration (less strict for development)
SECRET_KEY=development-secret-key-not-for-production
API_KEY_ENFORCEMENT_ENABLED=false

# Development Domain (for Replit/Codespaces)
REPLIT_DEV_DOMAIN=localhost

# Logging Configuration
LOG_LEVEL=DEBUG
LOG_FORMAT=pretty
LOG_FILE=/app/logs/app.log
ACCESS_LOG=/app/logs/access.log
ERROR_LOG=/app/logs/error.log

# Performance Configuration (lighter for development)
KEEP_ALIVE_TIMEOUT=5
MAX_CONNECTIONS=100
BACKLOG=128

# Rate Limiting (disabled for development)
RATE_LIMIT_ENABLED=false

# Monitoring
HEALTH_CHECK_ENABLED=true
METRICS_ENABLED=false

# Debug Features
DEBUG=true
SHOW_ERROR_DETAILS=true
ENABLE_PROFILER=false

# Hot Reload Configuration
WATCH_DIRS=/app
WATCH_EXTENSIONS=py,html,css,js