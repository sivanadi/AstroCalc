# Production Environment Variables for Vedic Astrology Calculator
# Copy this file and customize for your deployment

# Application Environment
ENVIRONMENT=production
PYTHONPATH=/opt/vedic-astrology

# Server Configuration
HOST=127.0.0.1
PORT=5000
WORKERS=4
RELOAD=false

# Database Configuration
DATABASE_URL=sqlite:///data/astrology_db.sqlite3

# Session Configuration
SESSION_TIMEOUT=3600

# CORS Configuration (comma-separated domains)
CORS_ORIGINS=https://your-domain.com,https://www.your-domain.com
AUTHORIZED_DOMAINS=your-domain.com,www.your-domain.com

# SSL/TLS Configuration
SSL_KEYFILE=/etc/ssl/vedic-astrology/key.pem
SSL_CERTFILE=/etc/ssl/vedic-astrology/cert.pem

# Security Configuration
SECRET_KEY=your-super-secret-key-here-change-this-in-production
API_KEY_ENFORCEMENT_ENABLED=true

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=/opt/vedic-astrology/logs/app.log
ACCESS_LOG=/opt/vedic-astrology/logs/access.log
ERROR_LOG=/opt/vedic-astrology/logs/error.log

# Performance Configuration
KEEP_ALIVE_TIMEOUT=5
MAX_CONNECTIONS=1000
BACKLOG=2048

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_REQUESTS_PER_DAY=1000

# Monitoring
HEALTH_CHECK_ENABLED=true
METRICS_ENABLED=true
METRICS_PORT=9090

# External Services (if needed)
# REDIS_URL=redis://localhost:6379/0
# SENTRY_DSN=your-sentry-dsn-here

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
BACKUP_LOCATION=/opt/vedic-astrology/backups

# Email Configuration (for alerts)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# ADMIN_EMAIL=admin@your-domain.com